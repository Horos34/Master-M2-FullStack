{
  "name": "solar-simulator",
  "version": "1.0.0",
  "description": "Simulateur de fermes solaires avec m√©triques Prometheus",
  "main": "src/index.ts",
  "scripts": {
    "start": "ts-node src/index.ts",
    "dev": "nodemon --exec ts-node src/index.ts",
    "build": "tsc",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write src/**/*.ts",
    "test": "vitest",
    "test:cov": "vitest --coverage",
    "docker:build": "docker build -t solar-simulator:latest .",
    "docker:run": "docker-compose up -d",
    "docker:logs": "docker-compose logs -f solar-simulator",
    "docker:stop": "docker-compose down"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "prom-client": "^15.1.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.19.26",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "eslint": "^8.56.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  }
}
